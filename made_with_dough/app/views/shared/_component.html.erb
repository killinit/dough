<% @components.each do |c| %>
<section class="component">
  <div class="component__description">
    <%= c.doc_html.html_safe %>
  </div>

  <code class="code code--raw">
    <%= c.code_raw_html %>
  </code>

  <div class="code code--processed">
    <%= c.code_processed_html.result(binding) %>
  </div>
</section>
<% end %>
